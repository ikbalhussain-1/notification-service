# Server Configuration
PORT=3005
NODE_ENV=development
ENV_PREFIX=dev

# Redis Configuration
# Use your deployed Redis URL from your .env file
# Keys are automatically prefixed with ENV_PREFIX to avoid conflicts between environments
# Format: redis://username:password@host:port or rediss://host:port (SSL)
# Example: redis://user:pass@redis.example.com:6379
REDIS_URI=redis://your-deployed-redis-url:6379

# Kafka Configuration
# IMPORTANT: Choose based on how you're running the app:
#
# If running app LOCALLY (npm run dev):
#   - Kafka on host machine: localhost:9092
#   - Kafka in Docker: localhost:PORT (check docker ps for port mapping)
#
# If running app in DOCKER:
#   - Kafka on host machine: host.docker.internal:9092 (Mac/Windows)
#   - Kafka in Docker: use container name or host.docker.internal:PORT
#
# To find Kafka port: docker ps | grep kafka
# Supports multiple brokers: localhost:9092,localhost:9093
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CLIENT_ID=notification-service
KAFKA_CONSUMER_GROUP_ID=notification-service-group
# SASL Configuration (only needed for authenticated Kafka)
# Leave both username and password empty for local/unauthenticated Kafka
# SASL is only enabled if BOTH username and password are provided
KAFKA_SASL_MECHANISM=plain
KAFKA_SASL_USERNAME=
KAFKA_SASL_PASSWORD=
# SSL Configuration (set to true only if Kafka requires SSL)
KAFKA_SSL_ENABLED=false
KAFKA_CONNECTION_TIMEOUT=10000
KAFKA_REQUEST_TIMEOUT=30000

# API Authentication
API_KEY=your-static-api-key-per-environment

# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_DEFAULT_CHANNEL=C1234567890

# Email Configuration (Gmail SMTP)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_SECURE=false
EMAIL_SMTP_USER=your-email@gmail.com
EMAIL_SMTP_PASSWORD=your-app-password
EMAIL_FROM_NAME=Notification Service
EMAIL_FROM_ADDRESS=noreply@example.com

# Internal Events Platform
INTERNAL_EVENTS_BASE_URL=https://internal-events.example.com
INTERNAL_EVENTS_API_KEY=your-api-key
INTERNAL_EVENTS_TIMEOUT=5000

# Swagger Auth
SWAGGER_USER=admin
SWAGGER_PASSWORD=admin123

